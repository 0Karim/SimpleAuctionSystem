@model SimpleAuctionSystem.ViewModels.ItemViewModel

<h2>Add New Participant</h2>

@using (Ajax.BeginForm("AddNewItem", "Home", new AjaxOptions {OnSuccess= "OnItemsSuccess", OnFailure= "OnItemFailure" } , new {@class= "form-horizontal" , @id="AddnewItemForm" }))
{
    @Html.HiddenFor(model => model.ItemId)
    <div class="row">
        <div class="form-group col col-md-6">
            <label for="ItemName">Item Name <span class="astrek">*</span></label>
            @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control frm", @placeholder = "Enter Item Name", @id = "ItemName" })
            @Html.ValidationMessageFor(model => model.ItemName, null, new { @class = "errorMassage" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col col-md-6">
            <label for="ItemStartPrice" class="">Item Start Price <span class="astrek">*</span></label>
            @Html.TextBoxFor(model => model.ItemStartPrice, new { @class = "form-control frm", @placeholder = "Enter Item Start Price", @id = "ItemStartPrice" })
            @Html.ValidationMessageFor(model => model.ItemStartPrice, null, new { @class = "errorMassage" })
        </div>
    </div>

    <div align="center" class="row">
        <div class="col col-sm-8">
            <button type="submit" style="margin-top:15px; margin-left: 225px" class="btn btn-primary">Add Item</button>
        </div>
    </div>
}


<script type="text/javascript">
    $(document).ready(function () {
        GetAllItems();
    });
</script>